<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.me.AddVauleActivity">

    <LinearLayout style="@style/TitleBar">

        <ImageView
            style="@style/TitleBarAction"
            android:onClick="onHomeClick"
            android:src="@mipmap/ic_back"
            tools:ignore="OnClick" />

        <TextView
            style="@style/TitleBarText"
            android:text="" />

        <ImageView style="@style/TitleBarAction" />

    </LinearLayout>

    <View style="@style/view_line_tab_line" />

    <ImageView
        android:layout_marginTop="@dimen/space_30"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/ic_m_added_img"
        android:layout_marginBottom="@dimen/space_30"
        android:layout_width="@dimen/space_180"
        android:layout_height="@dimen/space_180" />
    <EditText
        android:id="@+id/et_m_add_code"
        android:paddingLeft="@dimen/space_20"
        android:paddingRight="@dimen/space_20"
        android:hint="@string/exchange_code"
        android:textSize="@dimen/text_size_14"
        android:layout_marginLeft="@dimen/space_30"
        android:layout_marginRight="@dimen/space_30"
        android:background="@drawable/et_m_input_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spance_50" />
    <Button
        android:id="@+id/btn_m_add_value"
        android:text="@string/sure_exchange"
        android:textSize="@dimen/text_size_18"
        android:textColor="@color/white"
        android:background="@mipmap/ic_m_added"
        android:layout_marginTop="@dimen/space_20"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/space_30"
        android:layout_marginRight="@dimen/space_30"
        android:layout_height="@dimen/spance_50" />
</LinearLayout>