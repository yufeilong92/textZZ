<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/space_100dp"
    android:orientation="horizontal"
    android:paddingTop="@dimen/space_16"
    android:paddingBottom="@dimen/space_16"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
       >

        <TextView
            android:text="标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题"
            android:id="@+id/tv_item_home_title_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/space_4"
            android:maxLines="2"
            android:textColor="@color/text_title_color"
            android:textSize="@dimen/space_16" />

        <LinearLayout
            android:layout_marginTop="@dimen/space_8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_home_look_all"
                style="@style/list_show_look" />

            <Space style="@style/space_16_width" />

            <CheckBox
                android:id="@+id/chb_isSupper"
                style="@style/list_show_chb" />
            <Space
                android:visibility="gone"
                style="@style/space_8_width" />

            <TextView
                android:textColor="@color/text_fu_color"
                android:layout_gravity="center"
                android:id="@+id/tv_item_home_laud_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/space_6"
              />


        </LinearLayout>
    </LinearLayout>

    <ImageView
       android:layout_marginLeft="@dimen/space_8"
        android:id="@+id/iv_item_home_all"
        android:layout_width="@dimen/space_100dp"
        android:layout_height="@dimen/space_70"
        android:scaleType="fitXY"
        android:src="@mipmap/f_t" />
</LinearLayout>