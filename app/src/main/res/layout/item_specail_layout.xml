<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/space_48"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_specail_mark"
        android:layout_width="@dimen/space_18"
        android:layout_height="@dimen/space_18"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/space_16"
        android:src="@mipmap/ic_node" />

    <TextView
        android:layout_weight="1"
        android:id="@+id/tv_specail_mark"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/space_16"
        android:text="nihai "
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_14" />
    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/iv_speacl_next"
        android:src="@mipmap/ic_more_go"
        android:layout_width="@dimen/space_48"
        android:layout_height="@dimen/space_16" />
</LinearLayout>